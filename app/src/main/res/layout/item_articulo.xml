<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenDePortada"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imagenDePortada"
        android:text="Titulo del artÃ­culo"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        />



    <TextView android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Cargando..."
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_marginRight="16dp"
        />

    <TextView android:id="@+id/envioGratis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/precio"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:textColor="#00eb63"
        android:textSize="20sp"
        android:layout_marginRight="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/imagenDePortada"
        />

</RelativeLayout>
